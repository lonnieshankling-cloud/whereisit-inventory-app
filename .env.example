# Environment variables for Expo app & Backend
# Copy this file to .env.local and add your actual API keys

# ==== MOBILE APP CONFIG ====

# Gemini API Key for AI shelf analysis
# Get from: https://aistudio.google.com/app/apikey
EXPO_PUBLIC_GEMINI_API_KEY=your_gemini_api_key_here

# Backend URL (optional, for cloud sync)
EXPO_PUBLIC_BACKEND_URL=http://localhost:4000

# Clerk Authentication (mobile)
# Get from https://dashboard.clerk.com → Your App → API Keys
EXPO_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...

# RevenueCat Google Play API Key (mobile)
EXPO_REVENUECAT_GOOGLE_API_KEY=test_...

# ==== BACKEND CONFIG (Encore) ====

# Clerk Secret Key (backend, DO NOT expose in mobile)
ClerkSecretKey=sk_test_...

# RevenueCat Webhook Security
# Set this to require bearer token auth on webhook endpoint
REVENUECAT_WEBHOOK_AUTH_TOKEN=your_webhook_secret_token

# RevenueCat Entitlement ID (optional filter)
# If set, webhook events for OTHER entitlements are ignored
REVENUECAT_ENTITLEMENT_ID=pro
EXPO_PUBLIC_REVENUECAT_ENTITLEMENT_ID=pro

# RevenueCat SKU → Plan Mapping (explicit, no heuristics)
# Map your exact RevenueCat product IDs to internal plan types
RC_PRODUCT_PRO_MONTHLY=rc_pro_monthly
RC_PRODUCT_PRO_ANNUAL=rc_pro_annual
RC_PRODUCT_PRO_LIFETIME=rc_pro_lifetime

# Gemini API Key (backend for AI analysis)
GeminiApiKey=your_gemini_api_key_here

# Resend API Key (backend for email delivery)
ResendApiKey=re_...

# Google Vision API (backend, requires google-vision-key.json in backend/)
# Already handled via credential file, no env var needed

# ==== OPTIONAL: MONITORING & OBSERVABILITY ====

# Enable CloudWatch metrics export (future integration)
ENABLE_CLOUDWATCH_METRICS=false

# Datadog API Key (if using Datadog)
# DATADOG_API_KEY=...

# Log level for backend
LOG_LEVEL=info
